<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:tools="http://schemas.android.com/tools">
	<CheckBox
		android:id="@+id/list_item_note_active"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:padding="4dp" />
	<TextView
		android:id="@+id/list_item_note_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_toStartOf="@id/list_item_note_active"
		android:layout_toLeftOf="@id/list_item_note_active"
		android:textStyle="bold"
		android:padding="4dp"
		tools:text="Item title" />
	<TextView
		android:id="@+id/list_item_note_date"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_toStartOf="@id/list_item_note_active"
		android:layout_toLeftOf="@id/list_item_note_active"
		android:layout_below="@id/list_item_note_title"
		android:padding="4dp"
		tools:text="Item date" />
</RelativeLayout>